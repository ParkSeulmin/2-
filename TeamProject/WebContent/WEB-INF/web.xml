<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>WebJSP3_Jakarta_DBCP</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DBCPInit</servlet-name>
    <servlet-class>JDBC.loader.DBCPInit</servlet-class>
    <init-param>
      <param-name>jdbcdriver</param-name>
      <param-value>oracle.jdbc.OracleDriver</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JoinController</servlet-name>
    <servlet-class>Login.Controller.JoinController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JoinController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PwdSearchController</servlet-name>
    <servlet-class>Login.Controller.PwdSearchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PwdSearchController</servlet-name>
    <url-pattern>*.da</url-pattern>
  </servlet-mapping>

   <!-- BoardFrontController -->
   <servlet>
      <servlet-name>BoardFrontController</servlet-name>
      <servlet-class>Board.Controller.BoardFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>BoardFrontController</servlet-name>
      <url-pattern>*.bo</url-pattern>
   </servlet-mapping>
   
   <servlet>
     <servlet-name>LoginController</servlet-name>
     <servlet-class>Login.Controller.Login_Controller</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>LoginController</servlet-name>
     <url-pattern>*.login</url-pattern>
  </servlet-mapping>
</web-app>